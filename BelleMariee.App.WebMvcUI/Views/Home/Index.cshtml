    <style>
        .video-container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
            padding: 0;
            margin: 0;
        }

        .custom-video {
            width: 100%;
            max-width: 100%;
            height: auto;
            margin: 0;
            padding: 0;
        }

        .card {
            position: relative;
            width: 22%;
            height: 350px;
            overflow: hidden;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            perspective: 1000px;
            display: inline-block;
            margin: 15px;
            text-align: center;
        }

            .card img {
                width: 100%;
                height: auto;
                display: block;
            }

            .card:hover .inner {
                transform: rotateY(180deg);
            }

        .inner {
            position: absolute;
            width: 100%;
            height: 100%;
            transform-style: preserve-3d;
            transition: transform 0.6s;
        }

        .front, .back {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden; /* Ön ve arka yüzlerin dönme sırasında görünürlüğü */
        }

        .front {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background-color: #cdcdc1;
            transform: rotateY(0deg);
            z-index: 2;
            padding: 20px;
            text-align: center;
        }

        .back {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background-color: #F6F5F2;
            color: dimgrey;
            transform: rotateY(180deg);
            z-index: 1;
            padding: 20px;
            text-align: center;
        }

            .back a {
                display: block;
                width: 100%;
                padding: 10px;
                background-color: slategrey;
                color: black;
                text-decoration: none;
                transition: background-color 0.3s ease;
                margin-top: 10px;
